<UserControl x:Class="SilverlightScratch.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="600" Height="300">
    <Grid x:Name="LayoutRoot" Background="#FF5C7590">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>

        <Button x:Name="testButton" Content="Push Me!" Height="80" Width="200" Click="testButton_Click" 
                Grid.Row="1" Grid.Column="0"
                />
        <Button x:Name="secondButton" Content="Second Button"  Height="80"  Width="200" 
                Grid.Row="0" Grid.Column="1"
                />
    </Grid>
</UserControl>
